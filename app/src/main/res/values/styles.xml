<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/Primary_main</item>
        <item name="colorPrimaryDark">@color/Primary_dark</item>
    </style>

    <style name="TaskTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/GTBeeActionBar</item>
        <item name="android:actionMenuTextColor">@color/Accent_main</item>
    </style>

    <style name="GTBeeActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/Primary_dark</item>
        <item name="android:titleTextStyle">@style/GTBeeActionBarTitleText</item>
    </style>

    <style name="GTBeeActionBarTitleText"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/Accent_main</item>
    </style>


    <style name="Theme.App.Base" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/Primary_main</item>
        <item name="colorControlActivated">@color/Primary_light</item>
        <item name="colorControlHighlight">@color/Primary_light</item>
    </style>

</resources>
